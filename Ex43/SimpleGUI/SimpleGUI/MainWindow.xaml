<Window x:Class="SimpleGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="10">
            <StackPanel VerticalAlignment="Center" DockPanel.Dock="Right" Margin="10,0,0,-10">
                <Button Content="Scroll up" Width="100" Margin="0,0,0,10" Click="ScrollUp"/>
                <Button Content="Clear" Width="100" Margin="0,0,0,10" Click="Clear"/>
                <Button Content="Scoll down" Width="100" Margin="0,0,0,10" Click="ScrollDown"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Margin="0,0,0,-10">
                <TextBox x:Name="TextBox1" Height="23" TextWrapping="Wrap" Text="TextBox 1" Margin="0,0,0,10"/>
                <TextBox x:Name="TextBox2" Height="23" TextWrapping="Wrap" Text="TextBox 2" Margin="0,0,0,10"/>
                <TextBox x:Name="TextBox3" Height="23" TextWrapping="Wrap" Text="TextBox 3" Margin="0,0,0,10"/>
                <TextBox x:Name="TextBox4" Height="23" TextWrapping="Wrap" Text="TextBox 4" Margin="0,0,0,10"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
